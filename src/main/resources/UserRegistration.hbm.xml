<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.shareversity.restModels.UserRegistrationDetails" table="USER_REGISTRATION">


        <meta attribute="class-description">
            This class contains the User Details.
        </meta>

        <id name="id" type="java.lang.Integer" column="ID">
            <generator class="increment" />
        </id>

        <properties name="uq_Students_Email" unique="true">
            <property name="email" column="EMAIL" type="string" />
        </properties>

        <property name="firstName" column="FIRST_NAME" type="string" />
        <property name="lastName" column="LAST_NAME" type="string" />
        <property name="password" column="EMAIL_PASSWORD" type="java.lang.String" />
        <property name="secretCode" column="SECRET_CODE" type="string" />
        <property name="codeVerified" column="CODE_VERIFIED" type="java.lang.Boolean" />

    </class>
</hibernate-mapping>